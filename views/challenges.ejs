<%- include('./partials/header.ejs') %>
<body>
    <%- include('./partials/navbar.ejs') %>
    <div class="center-align">
        <h1>Challenges</h1>
        <h4>Practice and hone your skills through projects.</h4>

        <ul>
            <% for (let i = 0; i < challenges.length; i++){ %>
                <li><h5><a href="/challenge/<%=challenges[i].id%>"><%= challenges[i].name %></a></h5>
                    <form action="/challenge/<%= challenges[i].id %>?_method=DELETE" method="POST">
                        <a class="waves-effect waves-light btn" href="/challenge/<%=challenges[i].id%>/edit"><i class="material-icons right">create</i>Edit</a>
                        <button class="waves-effect waves-light btn" type="submit"><i class="material-icons right">delete</i>Delete</button>
                    </form>
                </li>
                <br>
            <% } %>
        </ul>
        <p>Have a challenge idea? <a href="/challenge/new">Create A New Challenge</a></p>
    </div>
<%- include('./partials/footer.ejs') %>